<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <title>Store Edit</title>
    </head>
    <body>
        <div class="container">
            <div class="jumbotron">
                <h1>Shoe Depot Tracking -<h1>
                <h6><em>"For the feet, by the people"</em></h6>
                <h3><u>{{ store.getName }} Edit Page</u></h3>
            </div>

            <form action="/store/{{ store.getId }}" method="post">
                <input type="hidden" name="_method" value="patch">

                <label for="name">Rename {{ store.getName }}:</label>
                <br>
                <input type="text" name="name" id="name" required>
                <br><br>
                <button type="submit" class="btn-warning">Update</button>
            </form>
            <br>
            <form action="/store/{{ store.getId }}" method="post">
                <input type="hidden" name="_method" value="delete">

                <button type="submit" class="btn-danger">Remove {{ store.getName }}</button>
            </form>

            <h4><a href="/">Nevermind!</a></h4>
        </div>
    </body>
</html>
